pipeline {
    agent any

    tools {
        maven 'Maven3'   // Make sure Maven3 is configured in Jenkins
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/gauravpanwar8909/java11-examples.git'
            }
        }

        stage('Packaging') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Archiving') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
